<?xml version="1.0" encoding="UTF-8"?>
<settings>
	<category label="Nastavení">
        <setting label="Počet položek v historii vyhledávání" type="number" id="search_history" default="10"/>
		<setting label="Počet nejnovějších epizod v Novinkách obl. pořadů" type="slider" id="favourites_new_count" range="5,5,100" default="10" option="int"/>
		<setting label="Skrýt Nastavení stanic v menu" type="bool" id="hide_stations_settings" default="false"/>
		<setting label="Skrýt Novinky oblíbených pořadů v menu " type="bool" id="hide_favourites_new" default="false"/>		
		<setting label="Skrýt neposlechnuté epizody obl. pořadů" type="bool" id="hide_unlistened_favourites" default="false"/>	
	</category>
	<category label="Logování">
        <setting label="Logování požadavků" type="bool" id="log_request" default="false"/>
        <setting label="Logování odpovědí" type="bool" id="log_response" default="false"/>
	</category>
</settings>
